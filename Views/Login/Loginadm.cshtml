@{
    ViewData["Title"] = "Login_adm";
}

@{
    Layout="_Layout_Loginadm";
}

@model Usuario

<body>
	<div style="text-align: center; color: white;" >
		<h2>Administrativos</h3>
	</div>
	<div class="container h-100" style="margin-bottom: 36%;">
		<div class="d-flex justify-content-center h-100">
			<div class="user_card" style="margin-top: 250px;">
				<div class="d-flex justify-content-center">
					<div class="brand_logo_container">
						<img src="~/images/inorcam.ico" class="brand_logo" alt="Logo">
					</div>
				</div>
				<div class="d-flex justify-content-center form_container">
					<form asp-action="Logueo" asp-controller="Login">
							<div class="input-group mb-3">
							<div class="input-group-append">
								<span class="input-group-text"><i class="fas fa-user"></i></span>
							</div>
							<input type="text" asp-for="Correo" class="form-control input_user" placeholder="Username"/>
						</div>
						<div class="input-group mb-2">
							<div class="input-group-append">
								<span class="input-group-text"><i class="fas fa-key"></i></span>
							</div>
							<input type="password" asp-for="Password" class="form-control input_pass" placeholder="Password"/>
						</div>
						<div class="d-flex justify-content-center mt-3 login_container">
							<button type="submit" class="btn btn-primary">Iniciar sesi√≥n</button>				 	        
				        </div>
					</form>
				</div>
			</div>
		</div>
	</div>
	
</body>