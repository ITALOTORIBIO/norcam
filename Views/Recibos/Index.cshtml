@{
    ViewData["Title"] = "Control Interno";
}
@model IEnumerable<Recibos>
@{
    Layout="_LayoutCInt";
}

<div style="margin-top: 15px;">
    <ul class="nav nav-tabs dark">
        <li class="nav-item">
            <a class="nav-link" asp-controller="Ordenes" asp-action="Index">Ã“RDENES</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Facturas" asp-action="Index">FACTURAS</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" asp-controller="Recibos" asp-action="Index">RECIBOS</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Cliente" asp-action="Index">CLIENTES</a>
        </li>
    </ul>
</div>
<div class="row">
    <div class="col-lg-11">
        <table class="table table-hover" style="margin-top: 35px;">
            <thead>
                <tr>
                        <th style="text-align: center;">
                            @Html.DisplayNameFor(model=> model.id)
                        </th>
                        <th style="text-align: center;">
                            @Html.DisplayNameFor(model=> model.fec_pago)
                        </th>
                        <th colspan="2" style="text-align: center;">
                            @Html.DisplayNameFor(model=> model.doc_cob)
                        </th>
                        <th style="text-align: center;">
                            @Html.DisplayNameFor(model=> model.cod_factura)
                        </th>
                        <th colspan="3" style="text-align: center; font-weight: bold;">
                            Opciones
                        </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var recibos in Model)
                {
                    <tr>
                        <td style="text-align: center;">
                            @Html.DisplayFor(ModelItem=> recibos.id)
                        </td>
                        <td style="text-align: center;">
                            @Html.DisplayFor(ModelItem=> recibos.fec_pago)
                        </td>
                        <td style="text-align: center;">
                            @Html.DisplayFor(ModelItem=> recibos.doc_cob)
                        </td>
                        <td style="text-align: center;">
                            @Html.DisplayFor(ModelItem=> recibos.cod_factura)
                        </td>
                        <td>
                               <button type="button" class="btn btn-info" data-toggle="ajax-modal" data-target="#Detalle" data-url="@Url.Action($"Detalle/{recibos.id}")">VER DETALLE</button>                            
                        </td>
                        <td>
                            <form action="Edit" method="post">
                               <input type="hidden" name="Id" value="@recibos.id">
                               <button class="btn btn-warning" style="text-align: center;">EDITAR</button>
                           </form>
                        </td>
                        <td>
                            <form action="Delete" method="post">
                               <input type="hidden" name ="Id" value="@recibos.id">
                               <button class="btn btn-danger" style="text-align: center;">ANULAR</button>
                           </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-lg-1">
        <form action="" method="post">
            <table style="text-align: center;">
                <tr>
                    <td>
                        <a asp-controller="Recibos" asp-action="Nuevo"><button style="margin-top: 45px;" type="button" class="btn btn-info">NUEVO</button></a>
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>