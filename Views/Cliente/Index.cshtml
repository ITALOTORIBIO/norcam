 @{
    ViewData["Title"] = "Control Interno";
}

@model dynamic


@{
    Layout="_LayoutCInt";
}

<div id="PlaceHolderHere"></div>

<div style="margin-top: 15px;">
    <ul class="nav nav-tabs dark">
        <li class="nav-item">
            <a class="nav-link" asp-controller="Ordenes" asp-action="Index">ÓRDENES</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Facturas" asp-action="Index">FACTURAS</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Recibos" asp-action="Index">RECIBOS</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Cuentas" asp-action="Index">CTA. CTES.</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" asp-controller="Cliente" asp-action="Index">CLIENTES</a>
        </li>
    </ul>
</div>


<div class="row">
    <div class="col-lg-11">
        <table class="table table-hover" style="margin-top: 35px;">
            <thead>
                <tr>
                    <th style="text-align: center;">
                        # Cliente
                    </th>
                    <th style="text-align: center;">
                        Razón Social
                    </th>
                    <th style="text-align: center;">
                        RUC
                    </th>
                    <th style="text-align: center;">
                        Dirección
                    </th>
                    <th style="text-align: center;">
                        Teléfono
                    </th>
                    <th style="text-align: center;">
                        FAX
                    </th>
                    <th colspan="3" style="text-align: center; font-weight: bold;">
                        Opciones
                    </th>
                </tr>
            </thead>            
            <tbody>
               @foreach (Cliente cliente in Model.Cliente)
               {
                   <tr>
                       <td style="text-align: center;">
                           @Html.DisplayFor(modelItem=> cliente.id)
                       </td>
                       <td style="text-align: center;">
                           @Html.DisplayFor(modelItem=> cliente.razon_social)
                       </td>
                       <td style="text-align: center;">
                           @Html.DisplayFor(modelItem=> cliente.ruc)
                       </td>
                       <td style="text-align: center;">
                           @Html.DisplayFor(modelItem=> cliente.direccion)
                       </td>
                       <td style="text-align: center;">
                           @Html.DisplayFor(modelItem=> cliente.telefono)
                       </td>
                       <td style="text-align: center;">
                           @Html.DisplayFor(modelItem=> cliente.fax)
                       </td>
                       <td>
                        </td>
                       <td style="text-align: center;">
                           <a asp-action="Edit" asp-route-id="@cliente.id">
                               <button class="btn btn-warning" style="text-align: center;">EDITAR</button>
                           </a>
                       </td>
                       <td style="text-align: center;">
                           <a asp-action="Delete" asp-route-id="@cliente.id">
                               <button class="btn btn-danger" style="text-align: center;">ANULAR</button>
                           </a>
                       </td>
                   </tr>
               }
            </tbody>
        </table>
    </div>
    <div class="col-lg-1">
            <table style="text-align: center;">
                <tr>
                    <td>
                        <button style="margin-top: 45px;" type="button" class="btn btn-info" data-toggle="ajax-modal" data-target="#NuevoCliente" data-url="@Url.Action("Nuevo")">NUEVO</button>                       
                    </td>                                       
                </tr>
            </table>
        
    </div>
</div>

