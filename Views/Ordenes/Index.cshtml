@{
    ViewData["Title"] = "Control Interno";
}
@model IEnumerable<Ordenes>

@{
    Ordenes orden =new Ordenes();
}    
@{
    Layout="_LayoutCInt";
}

<div id="PlaceHolderHere"></div>

<div style="margin-top: 15px;">
    <ul class="nav nav-tabs dark">
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" asp-controller="Ordenes" asp-action="Index">Ã“RDENES</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Facturas" asp-action="Index">FACTURAS</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Recibos" asp-action="Index">RECIBOS</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Cuentas" asp-action="Index">CTA. CTES.</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Cliente" asp-action="Index">CLIENTES</a>
        </li>
    </ul>
</div>



<div class="row">
    <div class="col-lg-11">
        <table class="table table-hover" style="margin-top: 35px;">
            <thead>
                <tr>
                        <th style="text-align: center;">
                            @Html.DisplayNameFor(model=> model.id)
                        </th>
                        <th style="text-align: center;">
                            @Html.DisplayNameFor(model=> model.fec_rec)
                        </th>
                        <th colspan="2" style="text-align: center;">
                            @Html.DisplayNameFor(model=> model.razon_social)
                        </th>
                        <th style="text-align: center;">
                            @Html.DisplayNameFor(model=> model.contenido)
                        </th>
                        <th colspan="3" style="text-align: center; font-weight: bold;">
                            Opciones
                        </th>
                </tr>
            </thead>            
            <tbody>
                @foreach (Ordenes ordenes in Model)
                {
                    <tr>
                        <td style="text-align: center;">
                            @Html.DisplayFor(ModelItem=> ordenes.id)
                        </td>
                        <td style="text-align: center;">
                            @Html.DisplayFor(ModelItem=> ordenes.fec_rec)
                        </td>
                        <td style="text-align: center;">
                            @Html.DisplayFor(ModelItem=> ordenes.cod_cliente)
                        </td>
                        <td style="text-align: center;">
                            @Html.DisplayFor(ModelItem=> ordenes.razon_social)
                        </td>
                        <td style="text-align: center;">
                            @Html.DisplayFor(ModelItem=> ordenes.contenido)
                        </td>
                        <td>
                               <button style="margin-top: 15px;" type="button" class="btn btn-info" data-toggle="ajax-modal" data-target="#Detalle" data-url="@Url.Action($"Edit/{ordenes.id}")">Ver Detalle</button>
                            
                            <!-- Modal -->
                    <div class="modal fade" id="Detalle" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">

                    <div class="modal-dialog modal-dialog-scrollable" role="document">
                        <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Nuevo Cliente</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>

                        <div class="modal-body">
                            <div class="container h-100">
                                <dl>
                                    <div class="row">
                                    <dt class = "col-lg-6" style="text-align: right;">
                                        @Html.DisplayNameFor(model => model.fec_rec)
                                    </dt>
                                    <dd class = "col-lg-6">
                                        @Html.DisplayFor(model => orden.fec_rec)
                                    </dd>
                                    </div>
                                    <div class="row">
                                    <dt class = "col-lg-6" style="text-align: right;">
                                        @Html.DisplayNameFor(model => model.cod_cliente)
                                    </dt>
                                    <dd class = "col-lg-6">
                                        @Html.DisplayFor(model => orden.cod_cliente)
                                    </dd>
                                    </div>
                                    <div class="row">
                                    <dt class = "col-lg-6" style="text-align: right;">
                                        @Html.DisplayNameFor(model => model.razon_social)
                                    </dt>
                                    <dd class = "col-lg-6">
                                        @Html.DisplayFor(model => orden.razon_social)
                                    </dd>
                                    </div>
                                    <div class="row">
                                    <dt class = "col-lg-6" style="text-align: right;">
                                        @Html.DisplayNameFor(model => model.proveedor)
                                    </dt>
                                    <dd class = "col-lg-6">
                                        @Html.DisplayFor(model => orden.proveedor)
                                    </dd>
                                    </div>
                                    <div class="row">
                                    <dt class = "col-lg-6" style="text-align: right;">
                                        @Html.DisplayNameFor(model => model.dua)
                                    </dt>
                                    <dd class = "col-lg-6">
                                        @Html.DisplayFor(model => orden.dua)
                                    </dd>
                                    </div>
                                    <div class="row">
                                    <dt class = "col-lg-6" style="text-align: right;">
                                        @Html.DisplayNameFor(model => model.cif)
                                    </dt>
                                    <dd class = "col-lg-6">
                                        @Html.DisplayFor(model => orden.cif)
                                    </dd>
                                    </div>
                                    <div class="row">
                                    <dt class = "col-lg-6" style="text-align: right;">
                                        @Html.DisplayNameFor(model => model.contenido)
                                    </dt>
                                    <dd class = "col-lg-6">
                                        @Html.DisplayFor(model => orden.contenido)
                                    </dd>
                                    </div>
                                    <div class="row">
                                    <dt class = "col-lg-6" style="text-align: right;">
                                        @Html.DisplayNameFor(model => model.peso)
                                    </dt>
                                    <dd class = "col-lg-6">
                                        @Html.DisplayFor(model => orden.peso)
                                    </dd>
                                    </div>
                                    <div class="row">
                                    <dt class = "col-lg-6" style="text-align: right;">
                                        @Html.DisplayNameFor(model => model.ubicacion)
                                    </dt>
                                    <dd class = "col-lg-6">
                                        @Html.DisplayFor(model => orden.ubicacion)
                                    </dd>
                                    </div>
                                    <div class="row">
                                    <dt class = "col-lg-6" style="text-align: right;">
                                        @Html.DisplayNameFor(model => model.regimen)
                                    </dt>
                                    <dd class = "col-lg-6">
                                        @Html.DisplayFor(model => orden.regimen)
                                    </dd>
                                    </div>
                                    <div class="row">
                                    <dt class = "col-lg-6" style="text-align: right;">
                                        @Html.DisplayNameFor(model => model.fec_num)
                                    </dt>
                                    <dd class = "col-lg-6">
                                        @Html.DisplayFor(model => orden.fec_num)
                                    </dd>
                                    </div>
                                    <div class="row">
                                    <dt class = "col-lg-6" style="text-align: right;">
                                        @Html.DisplayNameFor(model => model.fec_entrega)
                                    </dt>
                                    <dd class = "col-lg-6">
                                        @Html.DisplayFor(model => orden.fec_entrega)
                                    </dd>
                                    </div>
                                    <div class="row">
                                    <dt class = "col-lg-6" style="text-align: right;">
                                        @Html.DisplayNameFor(model => model.tc)
                                    </dt>
                                    <dd class = "col-lg-6">
                                        @Html.DisplayFor(model => orden.tc)
                                    </dd>
                                    </div>
                            </div>

                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>                            
                        </div>
                        </div>
                    </div>
                    </div>
                        </td>
                        <td>
                            <form action="Edit" method="post">
                               <input type="hidden" name="Id" value="@ordenes.id">
                               <button class="btn btn-warning" style="text-align: center;">Editar</button>
                           </form>
                        </td>
                        <td>
                            <form action="Delete" method="post">
                               <input type="hidden" name ="Id" value="@ordenes.id">
                               <button class="btn btn-danger" style="text-align: center;">Anular</button>
                           </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-lg-1">
        <form action="" method="post">
            <table style="text-align: center;">
                <tr>
                    <td>
                        <a asp-controller="Ordenes" asp-action="Nuevo"><button style="margin-top: 45px;" type="button" class="btn btn-info">NUEVO</button></a>
                    </td>                    
                </tr>
            </table>
        </form>
    </div>
</div>